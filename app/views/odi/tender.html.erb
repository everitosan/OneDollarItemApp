	howa1 = "<%= t ('howitworks.a1') %>"
	howq2 = "<%= t ('howitworks.q2') %>"
	howa2 = "<%= t ('howitworks.a2') %>"
	howq3 = "<%= t ('howitworks.q3') %>"
	howa3 = "<%= t ('howitworks.a3') %>"
	howq4 = "<%= t ('howitworks.q4') %>"
