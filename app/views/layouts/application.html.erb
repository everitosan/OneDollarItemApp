					>		
				</ap-team-directive>
				

				<ap-share-directive>		
				</ap-share-directive>

				<span ng-controller="shareMenuCtrl">
					<span class="click" ng-click="shareFacebook(1)">
						<%= image_tag 'shareButton.png', :id =>"shareFacebook" %>
					</span>
				</span>
			</div>
		</div>
	
	</div>

